<h1> Create a new song slut </h1>

<% if flash[:errors] %>
<% flash[:errors].each do |error| %>
    <p><%= error %> </p>
    <% end %>
    <% end %>

<%= form_for @song do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :released %>
    <%= f.check_box :released, value: :boolean %>

    <%= f.label :release_year %>
    <%= f.number_field :release_year %>

    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>

    <%= f.label :genre %>
    <%= f.text_field :genre %>

    <%= f.submit %>
    <% end %>